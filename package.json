{
  "name": "spruce-ui",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm -C preview dev",
    "build": "pnpm -r exec rimraf dist && pnpm -r --parallel build && pnpm -C build start",
    "docs:dev": "pnpm -C docs dev",
    "changelog": "conventional-changelog -n './changelog.config.js' -i CHANGELOG.md -s -r 0 -k './packages/cui'",
    "changelogs": "pnpm -r --parallel changelog && pnpm changelog && pnpm prettier",
    "prettier": "prettier --config .prettierrc --write ./**/*.md",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx,.vue --fix",
    "vitest": "vitest",
    "vitest:c": "vitest run --coverage",
    "vitest:u": "vitest --coverage --ui",
    "create:comp": "node -r @esbuild-kit/cjs-loader ./scripts/create-component.ts",
    "prepare": "husky install",
    "postinstall": "pnpm build"
  },
  "keywords": [
    "飞讯云杉前端",
    "Spruce Hub",
    "Spruce UI"
  ],
  "author": "Spruce FE",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spruce-hub/spruce-ui.git"
  },
  "homepage": "https://github.com/spruce-hub/spruce-ui",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=7.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@esbuild-kit/cjs-loader": "^2.4.2",
    "@noahyu/eslint-config-vue": "^1.1.0",
    "@spruce-hub/cui": "workspace:^0.0.0",
    "@spruce-hub/icons": "workspace:^0.0.0",
    "@spruce-hub/mui": "workspace:^0.0.0",
    "@types/node": "18.15.11",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vitest/coverage-c8": "^0.29.8",
    "@vitest/ui": "^0.29.8",
    "@vue/compiler-dom": "3.2.47",
    "@vue/test-utils": "^2.3.2",
    "c8": "^7.13.0",
    "chalk": "^5.2.0",
    "commitizen": "^4.3.0",
    "compare-func": "^2.0.0",
    "consola": "^2.15.3",
    "conventional-changelog-angular": "^5.0.13",
    "conventional-changelog-cli": "^2.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.10.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vitest": "^0.29.8",
    "vue": "^3.2.47"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
