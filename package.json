{
  "name": "spruce-ui",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm -C preview dev",
    "build": "pnpm -F @spruce/ui-build exec rimraf dist && pnpm -F @spruce/ui-build build && pnpm -C build start",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs docs:build",
    "changelog": "conventional-changelog -n './changelog.config.js' -i CHANGELOG.md -s -r 0 -k './packages/cui'",
    "changelogs": "pnpm -r --parallel changelog && pnpm changelog && pnpm prettier",
    "prettier": "prettier --config .prettierrc --write ./**/*.md",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx,.vue --fix",
    "vitest": "vitest",
    "vitest:c": "vitest run --coverage",
    "vitest:u": "vitest --coverage --ui",
    "create:comp": "node -r @esbuild-kit/cjs-loader ./scripts/create-component.ts",
    "prepare": "husky install",
    "postinstall": "pnpm build"
  },
  "keywords": [
    "Spruce Hub",
    "Spruce UI"
  ],
  "author": "Spruce FE",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spruce-hub/spruce-ui.git"
  },
  "homepage": "https://github.com/spruce-hub/spruce-ui",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@esbuild-kit/cjs-loader": "^2.4.2",
    "@noahyu/eslint-config-vue": "^1.1.0",
    "@spruce-hub/cui": "workspace:*",
    "@spruce-hub/eui": "workspace:*",
    "@spruce-hub/icons": "workspace:*",
    "@spruce-hub/mui": "workspace:*",
    "@types/node": "20.2.3",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vitest/coverage-c8": "^0.31.1",
    "@vitest/ui": "^0.31.1",
    "@vue/compiler-dom": "3.3.4",
    "@vue/test-utils": "^2.3.2",
    "c8": "^7.13.0",
    "chalk": "^5.2.0",
    "commitizen": "^4.3.0",
    "compare-func": "^2.0.0",
    "consola": "^3.1.0",
    "conventional-changelog-angular": "^5.0.13",
    "conventional-changelog-cli": "^2.2.2",
    "cz-git": "^1.6.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.14.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "jsdom": "^22.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.8",
    "vitest": "^0.31.1",
    "vue": "^3.3.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
